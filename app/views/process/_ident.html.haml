= form_with url: set_property_process_path do |f|
  = f.hidden_field :tab, value: params[:tab]
  .file-type
    %span.icon.in-text-small.mr-2
      %i.mi.mi-small(title="archive type") local_offer
    %span.select.vmiddle= f.select :file_type,
      options_for_select(%w{doujin magazine artbook}, @info[:file_type]), {},
      class: "input is-small", style: 'width: 15rem', onchange: "this.form.submit()"
    %span.ml-4
      - term = @info[:relative_path].tokenize_doujin_filename.join(' ').gsub(/[^a-z0-9\- ]/i, '')
      = links_to_search_engines term, target: :_blank

= render partial: "ident_#{@info[:file_type]}"
